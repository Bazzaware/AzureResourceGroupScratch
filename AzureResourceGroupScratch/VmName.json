{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {},
  "variables": {
    "copy": [
      {
        "name": "vmArray",
        "count": 5,
        "input": "[concat('myVirtualMachine', copyIndex('vmArray', 1))]"
      },
      {
        "name": "diskArray",
        "count": 5,
        "input": "[concat('myDataDisk', copyIndex('diskArray', 1))]"
      }
    ]
  },
  "resources": [],
  "outputs": {
    "vmArray": {
      "value": "[variables('vmArray')]",
      "type": "array"
    },
    "diskArray": {
      "value": "[variables('diskArray')]",
      "type": "array"
    }
  }
}